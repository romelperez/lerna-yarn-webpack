{
  "root": true,
  "ignorePatterns": [
    "node_modules",
    "public"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "react-hooks"
  ],
  "env": {
    "browser": true
  },
  "extends": [
    "standard-with-typescript"
  ],
  "rules": {
    "@typescript-eslint/semi": ["error", "always"],
    "semi": ["error", "always"]
  }
}
